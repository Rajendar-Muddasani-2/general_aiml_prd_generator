# Configuration Template for General AI/ML PRD Generator
# 
# INSTRUCTIONS:
# 1. Copy this file to config.yaml in the same directory
# 2. Replace YOUR_API_KEY_HERE with your actual OpenAI API key
# 3. NEVER commit config.yaml to git (it's in .gitignore)
#
# Example:
#   openai_api_key: "sk-proj-abc123xyz..."

# OpenAI API Configuration
openai_api_key: "YOUR_API_KEY_HERE"

# LLM Settings
llm:
  model: "gpt-5"          # Options: gpt-5, gpt-4o, gpt-4-turbo, gpt-4o-mini
  temperature: 0.7        # Range: 0.0 (deterministic) to 1.0 (creative)
  
# Cost Tracking
cost_tracking:
  enabled: true
  log_file: "./cost_log.json"

# Vector Store Settings
vectorstore:
  posiva_persist_directory: "../vectorstore"
  general_persist_directory: "../vectorstore"  # Used in General AI/ML repo

# Paths
completed_prds_path_posiva: "../prd_files"
completed_prds_path_general: "../sample_prds"

# Output
output_base_dir: ".."
